{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "src",
    "removeComments": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "declarationMap": true,
    "sourceMap": true,
    "paths": {
      "@btesting/*": ["packages/*/src"]
    }
  }
}
